<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
        "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <meta charset="utf-8">
    <title>הנפקת סיסמא לעובד</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/stylesheets/PageDesign.css">
   <style type="text/css">
       body{
           overflow: auto;
       }
   </style>
    <script>
        var logOut = function() {
            fetch ("/logout", {
                method: 'POST',
                body: JSON.stringify({}), // data can be `string` or {object}!
                headers: {
                    'Content-Type': 'application/json'
                }
            })
                .then ( res => {
                    window.location.href='http://localhost:3000/';
                    //window.sessionStorage.setItem(resave, true);

                })
                .catch(e => {
                    console.log("no LogOut!");
                });
        };
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById("logout").addEventListener("click", logOut);
        }, false);
    </script>
</head>
<body dir="rtl">
<div align="right">
    <button class="button" style="vertical-align:middle" id="logout"><span>logout </span></button></div>
<form action="/index/passwordSuccessfullyIssued"  class="container" method="POST" id="IssuePasswordToEmployee">
    <br><br>
    <div>
        <h1 align="center">הנפקת סיסמא לעובד</h1><br><br>

        <label  for="inputId">תעודת זהות:</label>
        <input  class="form-control" type="text" name="Id" id="inputId"  placeholder="הכנס תעודת זהות">
        <p style="color: red">  <%if (error)%>
            <%=error.id%></p>
        <div class="row">
            <div class="col-md-6">
                <label for="inputFirstName">שם פרטי:</label>
                <input type="text" class="form-control" name="FirstName" id="inputFirstName"  placeholder="הכנס שם פרטי">
            </div>
            <div class="col-md-6">
                <label for="inputLastName">שם משפחה:</label>
                <input type="Last Name" class="form-control" name="lastName" id="inputLastName" placeholder="הכנס שם משפחה"><br>
            </div>
        </div>
        <label for="Password">סיסמא:</label>
        <input type="text" class="form-control" name="password" id="Password"  placeholder="הכנס סיסמא">
        <p style="color: red">  <%if (error)%>
            <%=error.password%></p>
        <label for="TruePassword">אמת סיסמא:</label>
        <input type="text" class="form-control" name="truePassword" id="truePassword"  placeholder="הכנס שוב סיסמא"><br>

        <button  type="submit">שמור</button>
    </div>
</form>
</body>
</html>