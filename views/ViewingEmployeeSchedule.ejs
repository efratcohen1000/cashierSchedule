    <link rel="stylesheet" type="text/css" href="/stylesheets/PageDesign.css">

    <style type="text/css" >
        html, body {
            margin: 0px;
            padding: 0px;
            height: 100%;
            overflow: auto;
        }
        th {
            height: 45px;
        }
        thead,
        tfoot {
            background-color: #808080;
            color: #fff;
        }

        tbody {
            background-color: #d4d4d4;
        }

        table {
            width: 100%;
            border-collapse: collapse;
