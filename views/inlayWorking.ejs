<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
        "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/stylesheets/PageDesign.css">
    <title>שיבוץ עובד</title>
    <style>
        .errorContainer{
            background: #DDAAAA;
            padding: 2px;
            display: none;
            margin-bottom: 25px;
        }
        .error{
            color: #E03D3D;
        }
    </style>
</head>
<script>
    let name = document.getElementById("startTime").value;
    document.getElementById("demo").innerHTML = name;
</script>
<body dir="rtl">
<section class="container">
    <form id="addEmployees" action="/index/scheduling" method="post"><br>
        <h1 align="center"> שיבוץ עובד</h1><br><br>
        <div>
            <label  for="inputId">תעודת זהות:</label>
            <input type="text" class="form-control" name="Id" id="inputId"  placeholder="הכנס תעודת זהות">
            <p style="color: red">  <%if (error)%>
                <%=error.idEmp%></p>
            <label  for="inputName">שם פרטי:</label>
            <input type="text" class="form-control" name="name" id="inputName"  placeholder="הכנס שם פרטי">
            <label  for="inputFamily">שם משפחה:</label>
            <input type="text" class="form-control" name="family" id="inputFamily"  placeholder="הכנס שם משפחה">
            <p style="color: red">  <%if (error)%>
                <%=error.family%></p>
            <div class="errorContainer">
                <ul class="error"></ul>
            </div>
            <label>יום:</label>
            <select class="form-control" name="date">
                <option>בחר</option>
                <option>ראשון</option>
                <option>שני</option>
                <option>שלישי</option>
                <option>רביעי</option>
                <option>חמישי</option>
                <option>שישי</option>
                <option>שבת</option>
            </select>
            <p style="color: red">  <%if (error)%>
                <%=error.date%></p>
            <div class="row">
                <div class="col-md-6">
                    <label for="state">משמרת:</label>
                    <select name="state" id="inputState" class="form-control" >
                        <option selected>בחר</option>
                        <option>משמרת בוקר</option>
                        <option>משמרת ערב</option>
                    </select>
                    <p style="color: red">  <%if (error)%>
                        <%=error.inlayType%></p>
                </div>
            </div>
            <button  type="submit">שבץ</button>

        </div>
    </form>
</section>
</body>
</html>